<h1>Add course</h1>

{{#if errors}}
    <p class="alert">{{errors}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="This field have to been a title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="2" value="{{data.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="This field have to been a price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Img</label>
        <span class="helper-text" data-error="This field have to been a site url"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Send</button>
</form>