<h1>Edit course</h1>

{{#if errors}}
    <p class="alert">{{errors}}</p>
{{/if}}

<form action="/courses/edit" method="POST" class="edit-form" novalidate>
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Title</label>
        <span class="helper-text" data-error="This field have to been a title"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="This field have to been a price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Site url</label>
        <span class="helper-text" data-error="This field have to been a site url"></span>
    </div>
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Edit course</button>
</form>
<form action="/courses/delete" method="POST">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn red">Delete</button>
</form>