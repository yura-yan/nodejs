<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatar}}
                <img 
                    class="avatar"
                    src="/{{user.avatar}}"
                    alt="">
        {{else}}
                <img 
                    class="avatar"
                    src="https://cdn2.vectorstock.com/i/1000x1000/38/21/male-face-avatar-logo-template-pictograph-vector-11333821.jpg"
                    alt="">
        {{/if}}
    </div>

    <div class="col s6">
        <form action="/profile" method="POST" enctype='multipart/form-data'>
            <p>Your email: <strong>{{user.email}}</strong></p>
            <br>
            <div class="input-field">
                <input name="name" id="name" type="text" class="validate" required min="3" value="{{user.name}}">
                <label for="name">Name</label>
                <span class="helper-text" data-error="Name can not be empty"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>

</div>